@using FptLearningSystem.Utility

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FptLearningSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/ce2572679b.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="search-background">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom mb-3" id="opacityNew">
            <div class="container">
                <a class="navbar-brand" asp-area="Unauthenticated" asp-controller="Home" asp-action="Index">
                    <label class="text-info" style="cursor:pointer">FptLearningSystem</label>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.IsInRole(SD.TrainingStaff) || (User.IsInRole(SD.Administrator)))
                        {
                        <li class="nav-item dropdown text-white-50">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropDownContentLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Content Management
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropDownContentLink" id="opacityOld">
                                <a class="dropdown-item" asp-action="Index" asp-controller="Categories" asp-area="Administrator">Category</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Courses" asp-area="Administrator">Course</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Topics" asp-area="Administrator">Topic</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Users" asp-area="Administrator">Users</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown text-white-50">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropDownUserLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                User Management
                            </a>
                            <div class="dropdown-menu" id="opacityOld" aria-labelledby="navbarDropDownUserLink">
                                <a class="dropdown-item">Administrator</a>
                                <a class="dropdown-item">Training Staff</a>
                                <a class="dropdown-item">Trainer</a>
                                <a class="dropdown-item">Trainee</a>
                            </div>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top pl-3 footer text-white-50" style="background-color: #343a40;">
        <div class="container">
            &copy; 2020 - FptLearningSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
