@model IEnumerable<Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Course List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp;  Add Course</a>
            </div>
        </div>
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Category.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Description)
                        </th>
                        <th></th>
                        <th></th>

                    </tr>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Description)
                    </td>
                    <td>
                        <partial name="_TableButton" model="item.Id" />
                    </td>
                </tr>
                    }
                </table>
            }
            else
            {
                <p>No course exists...</p>
            }
        </div>
    </div>

