@model FptLearningSystem.Models.ViewModels.CourseAndCategoryViewModel
@using FptLearningSystem.Extensions

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create Course</h2>
<br />


<partial name="_StatusMessage" model="Model.StatusMessage" />


<div class="border backgroundWhite row shadowNew">
    <div class="col-8 border-right">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Course.CategoryId" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <select id="ddlCategoryList" asp-for="Course.CategoryId" asp-items="Model.CaterotyList.ToSelectListItem(Model.Course.CategoryId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Course.Name" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Course.Name" class="form-control" />
                </div>
                <span asp-validation-for="Course.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Course.Description" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Course.Description" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5 offset-3">
                    <partial name="_CreateAndBackToListBUtton" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-3 offset-1">
        @if (Model.CourseList.Count() > 0)
        {
            <p>Existing Course: </p>
            <div id="CourseList">
                <ul class="list-group"></ul>
            </div>
        }
    </div>



</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function updateCourseList() {
            var categorySelected = document.getElementById("ddlCategoryList").value;
            $list = $('#CourseList');
            $.ajax({
                url: '/Administrator/Courses/GetCourse/' + categorySelected,
                type: 'GET',
                dataType: 'text',
                success: function (data) {
                    results = JSON.parse(data);
                    $list.html('');
                    $list.append(' <ul class="list-group"> ');
                    for (i in results) {
                        $list.append('<li class="list-group-item">' + results[i].text + '</li>');
                    }
                    $list.append('</ul>');
                }
            });
        }
        $(document).ready(function () {
            updateCourseList();
        });
        $("#ddlCategoryList").on("change", function () {
            updateCourseList();
        });
    </script>


}
