@model IEnumerable<TrainerTopic>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="container-fluid">
    <h3 class="text-dark mb-4">Assign Trainer</h3>
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold">
                Assigned Trainer List
                @if (User.IsInRole(FptLearningSystem.Utility.SD.TrainingStaff))
                {
                    <a asp-action="Create" class="btn btn-info float-right"><i class="fas fa-plus"></i>&nbsp;  Assign Trainer To Topic</a>
                }
                </p>
        </div>
        <div class="card-body">
            <div class="backgroundWhite shadowNew">
                <br />
                <div>
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-striped border">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(m => m.TrainerId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.TopicId)
                                </th>
                                @if (User.IsInRole(FptLearningSystem.Utility.SD.TrainingStaff) || (User.IsInRole(FptLearningSystem.Utility.SD.Trainer)))
                                {
                                    <th></th>
                                }
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(m => item.User.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.Topic.Name)
                                    </td>
                                    @if (User.IsInRole(FptLearningSystem.Utility.SD.TrainingStaff) || (User.IsInRole(FptLearningSystem.Utility.SD.Trainer)))
                                    {
                                        <td style="width: 150px">
                                            <div class="btn-group" role="group">
                                                <a class="btn btn-success text-white" asp-area="Authenticated" asp-controller="Topics" asp-action="Details" asp-route-Id="@item.Topic.Id">
                                                    <i class="fas fa-list-alt"></i>
                                                </a>
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        </table>
                    }
                    else
                    {
                        <p>No Assigned Trainer to Topic exists...</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

