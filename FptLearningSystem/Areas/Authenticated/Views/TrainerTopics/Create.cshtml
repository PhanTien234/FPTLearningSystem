@model FptLearningSystem.Models.ViewModels.TrainerTopicViewModel
@using FptLearningSystem.Extensions

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}


<div class="container-fluid">
    <h3 class="text-dark mb-4">Assign Trainer</h3>
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold">
                Assign Trainer To Topic
            </p>
        </div>
        <div class="card-body">
            <partial name="_StatusMessage" model="Model.StatusMessage" />
            <form method="post" asp-action="Create">
                <div class="backgroundWhite shadowNew">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="TrainerTopic.TrainerId" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <select asp-for="@Model.TrainerTopic.TrainerId" id="TrainerId" asp-items="Model.Users.Select(u => new SelectListItem() { Text = u.Name.ToString(), Value = u.Id })" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="TrainerTopic.TopicId" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <select asp-for="@Model.TrainerTopic.TopicId" id="TopicId" asp-items="Model.Topics.ToSelectListItem(Model.TrainerTopic.TopicId)" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-5 offset-2">
                            <partial name="_AssignAndBackToListButton" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

